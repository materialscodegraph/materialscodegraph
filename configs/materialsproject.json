{
  "name": "MaterialsProject",
  "description": "Materials database for crystal structures and properties",

  "capabilities": [
    "material_data_fetching"
  ],

  "methods": {
    "material_data_fetching": "fetch_material"
  },

  "required_parameters": [
    "material_id"
  ],

  "optional_parameters": [
    "formula",
    "property"
  ],

  "parameter_types": {
    "material_id": "string",
    "formula": "string",
    "property": "string"
  },

  "produces": [
    "material_structure",
    "material_properties"
  ],

  "templates": {
    "fetch_material": {
      "needs": ["material_id"],
      "script": "python -c \"print('Fetching {material_id}')\"",
      "outputs": {
        "structure": "structure.json",
        "properties": "properties.json"
      }
    }
  },

  "execution": {
    "local": {
      "command": "python",
      "timeout": 30
    }
  }
}